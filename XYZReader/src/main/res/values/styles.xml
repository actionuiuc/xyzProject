<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/greenColor</item>
        <item name="colorAccent">@color/redColor</item>
        <item name="android:textColorPrimary">@color/whtColor</item>
        <item name="android:textColorSecondary">@color/blkColor</item>
        <item name="android:actionBarSize">@dimen/action_bar_size</item>
    </style>


    <style name="Theme.Bacon.CollapsedAppBar" parent="Theme.Bacon">
        <item name="android:textSize">@dimen/collapsed_app_bar_text_size</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Bacon.ExpandedAppBar" parent="Theme.Bacon">
        <item name="android:textSize">@dimen/expanded_app_bar_text_size</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Bacon.ArticleByline" parent="Theme.Bacon">
        <item name="android:textSize">@dimen/detail_byline_text_size</item>
        <item name="android:textColor">@color/byLinecolor</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Theme.Bacon.ArticleBody" parent="Theme.Bacon">
        <item name="android:textSize">@dimen/detail_body_text_size</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textColorLink">@color/blueColor</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Theme.Bacon.ListTitle" parent="Theme.Bacon">
        <item name="android:textSize">@dimen/list_title_text_size</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">@integer/list_title_maxLines</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.Bacon.ListSubtitle" parent="Theme.Bacon">
        <item name="android:textSize">@dimen/list_subtitle_text_size</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:maxLines">@integer/list_subtitle_maxLines</item>
        <item name="android:ellipsize">end</item>
    </style>


</resources>
